<Window x:Class="VirtualDisplay.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dx="clr-namespace:SharpDX.Windows;assembly=SharpDX.Desktop" 
        xmlns:local="clr-namespace:VirtualDisplay.App" 
        d:DataContext="{d:DesignInstance Type=local:MainWindowView}"
        mc:Ignorable="d"
        
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Click="Button_Click">Update</Button>
        </StackPanel>

        <Canvas Background="Red">

            <Image Width="500"   Height="400" Source="{Binding Bitmap}"/>
        </Canvas>



    </DockPanel>
</Window>
